generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model tbldevicevendors {
  vendorid String @id
  name     String
}

model tblusers {
  user_id   String @id
  password  String
}

model tbl_tickets {
  ticket_id         String      @id
  client_name       String
  phone             String   @db.VarChar(50)
  address           String   @db.Text
  device            String   @db.VarChar(100)
  ticket_status     String   @db.VarChar(50)
  issue_title       String
  issue_description String   @db.Text
  bill_id           String?  @db.VarChar(255) // Nullable field
  created_at        DateTime @default(now()) @db.Timestamp(0)
}

model tbl_bills {
  billId         String   @id @map("bill_id")
  ticketId       String   @map("ticket_id")
  imei           String
  billComponents Json     @map("bill_components")
  billTotal      Decimal  @map("bill_total")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")
}